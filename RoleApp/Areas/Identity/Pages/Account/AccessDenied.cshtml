@page
@model AccessDeniedModel
@{
    ViewData["Title"] = "Access denied";
}

<header>
    <h1 class="text-danger">@ViewData["Title"]</h1>
    <p class="text-danger">You do not have access to this resource.</p>
    <p class="text-secondary"> Will you like to login as a user?</p>
    <a class="nav-link text-dark" asp-area="" asp-controller="Role" asp-action="Index">Login as a user</a>
</header>
